{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": false, 
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "typeRoots": ["src/@types", "./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}